{
    "manifest_version": 2,
    
    "name": "智能公交",
    "description": "智能公交:最精准的实时公交,实时位置尽览无余,多线路车辆到站查询",
    "version": "1.0",
    "minimum_chrome_version": "17",

    "permissions": [
        "http://*/*",
        "https://*/*",
        "tabs",
        "bookmarks",
        "contextMenus"
    ],

    "icons":{
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },

    "browser_action": {
        "default_title": "Intelligent Bus",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["background.js"]
    }
}